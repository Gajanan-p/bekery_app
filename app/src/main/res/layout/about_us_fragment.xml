<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ssinfomate.bakeryapp.ui.about.AboutUsFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Arkam Foods Established in the year 2014 at Ludhiana, Punjab, We “Akram Foods” are a Sole Proprietorship based firm, engaged as the foremost Manufacturer of Sandwich Bread, Bread Crumb, Garlic Bread,etc.
                     \n\nOur products are high in demand due to their premium quality and affordable prices.
                     \n\n Furthermore, we ensure to timely deliver these products to our clients, through this we have gained a huge clients base in the market."
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:text="Nature of Business Exporter and Manufacturer
                    \n\nCompany CEO Akshay Kumar
                    \n\nTotal Number of Employees 101 to 500 People\
                    n\nYear of Establishment 2014
                    \n\nLegal Status of Firm Individual - Proprietor\n\n"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" GST No. 03EJBPK7256J1Z4"
                    android:textSize="18sp"
                    android:textColor="#000000"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>