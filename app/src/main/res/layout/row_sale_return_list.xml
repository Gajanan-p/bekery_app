<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="42dp"
    android:background="@drawable/row_background">

    <LinearLayout
        android:id="@+id/layout_customer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:background="#000000"
            android:orientation="horizontal">
            <!--androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_row_edit"
                android:layout_width="89dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="Edit"
                android:layout_margin="1dp"
                android:background="@drawable/row_button_background"
                android:textSize="16sp"
                android:textColor="@android:color/black"/-->


            <TextView
                android:id="@+id/text_row_item_code"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="10-2-2022"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_row_item_name"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="Cream Roll"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_qty"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="10"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>


            <!--TextView
                android:id="@+id/text_row_rate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="1000"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black"/-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_row_delete"
                android:layout_width="89dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="Delete"
                android:layout_margin="1dp"
                android:background="@drawable/row_button_background"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>